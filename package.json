{
  "name": "youtube-playlist-manager",
  "version": "1.0.0",
  "description": "A cross-platform desktop application for comprehensive YouTube playlist management with downloading capabilities",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:watch": "concurrently \"npm run build:main -- --watch\" \"vite build --watch\"",
    "electron:dev": "wait-on dist/main.js && electron .",
    "prepackage": "npm run clean && npm run build",
    "package": "electron-builder --config electron-builder.config.js",
    "package:all": "electron-builder --config electron-builder.config.js --win --mac --linux",
    "package:win": "electron-builder --config electron-builder.config.js --win",
    "package:win-portable": "electron-builder --config electron-builder.config.js --win portable",
    "package:mac": "electron-builder --config electron-builder.config.js --mac",
    "package:mac-dmg": "electron-builder --config electron-builder.config.js --mac dmg",
    "package:linux": "electron-builder --config electron-builder.config.js --linux",
    "package:linux-appimage": "electron-builder --config electron-builder.config.js --linux AppImage",
    "package:linux-deb": "electron-builder --config electron-builder.config.js --linux deb",
    "package:linux-rpm": "electron-builder --config electron-builder.config.js --linux rpm",
    "package:linux-snap": "electron-builder --config electron-builder.config.js --linux snap",
    "package:publish": "electron-builder --config electron-builder.config.js --publish=always",
    "package:draft": "electron-builder --config electron-builder.config.js --publish=onTagOrDraft",
    "dist": "npm run prepackage && npm run package:all",
    "dist:win": "npm run prepackage && npm run package:win",
    "dist:mac": "npm run prepackage && npm run package:mac",
    "dist:linux": "npm run prepackage && npm run package:linux",
    "test": "jest",
    "lint": "eslint src/**/*.{ts,tsx}",
    "clean": "rimraf dist dist-packages"
  },
  "keywords": [
    "electron",
    "youtube",
    "playlist",
    "downloader",
    "yt-dlp",
    "desktop",
    "cross-platform"
  ],
  "author": "YouTube Playlist Manager",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.4",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "better-sqlite3": "^9.2.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "node-pty": "^1.0.0",
    "youtube-dl-exec": "^2.4.13"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
